% idée empruntée à Denis Girou
\newdimen\Xd
\newdimen\Yd
\def\RandomMolecule#1{%
 \multido{\i=1+1}{#1}{%
   \setrandim\Xd{-2pt}{1pt}%
   \setrandim\Yd{-1pt}{1pt}%
   \pscircle*[linecolor=blue](\pointless\Xd,\pointless\Yd){1pt}}%
}


