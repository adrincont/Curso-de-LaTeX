\newcount\pst@cntm\newcount\pst@cntn\newcount\pst@cnto
\def\pst@mod#1#2#3{%
  \begingroup%
  \pst@cntm=#1\pst@cntn=#2\relax \pst@cnto=\pst@cntm
  \divide\pst@cntm by \pst@cntn  \multiply\pst@cntn by \pst@cntm
  \advance\pst@cnto by -\pst@cntn
  \edef\value{\endgroup\def\noexpand#3{\number\pst@cnto}}\value}
\makeatother

\usepackage{pstricks,pst-plot}
\makeatletter
\def\pst@@@hlabel#1{\small%
    \pst@mod{#1}{2}\tempa%              0 or 1
    \ifnum1>\tempa%                     odd value?
       \count1=#1\divide\count1 by 2%   #1/2
        $\the\count1\pi$%               n*pi
    \else$\frac{#1}{2}\pi$\fi}%         n/2*pi
\makeatother

