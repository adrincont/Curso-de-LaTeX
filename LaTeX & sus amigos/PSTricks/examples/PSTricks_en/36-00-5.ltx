\def\psGaussFill{\pst@object{psGaussFill}}
\def\psGaussFill@i(#1,#2)(#3,#4)#5#6{{%
  \pst@killglue
  \use@par
  \pscustom[linestyle=none,opacity=0.5,strokeopacity=0.5]{%
    \psline(#4,0)(#3,0)
    \psplot[liftpen=1]{#3}{#4}{x #5 #6 GAUSS}%
  }%
  \psplot[fillstyle=none]{#1}{#2}{x #5 #6 GAUSS}%
}\ignorespaces}
\makeatother

